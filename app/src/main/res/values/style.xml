<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="font_20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="font_14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_20_med" parent="font_20">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="text_16_nor" parent="font_16">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text_16_med" parent="font_16">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="text_14_med" parent="font_14">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="text_14_nor" parent="font_14">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text_12_nor" parent="font_12">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text_page_title" parent="text_20_med">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_body" parent="text_14_nor">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_link" parent="text_14_med">
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="text_modal_body" parent="text_16_nor">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text_modal_title" parent="text_16_med">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_list_item" parent="text_16_nor">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_list_title" parent="text_14_med">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_secondary" parent="text_14_nor">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text_tab" parent="text_14_med" />

    <style name="text_button" parent="text_14_med" />

    <style name="text_form_label" parent="text_14_nor">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text_form_field" parent="text_16_nor">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text_error" parent="text_12_nor">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="my_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_500</item>
        <item name="boxStrokeErrorColor">@color/text_red</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/text_error</item>
        <item name="helperTextTextColor">@color/text_red</item>
        <item name="hintTextAppearance">@style/text_form_label</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textAppearance">@style/text_form_field</item>
    </style>

</resources>